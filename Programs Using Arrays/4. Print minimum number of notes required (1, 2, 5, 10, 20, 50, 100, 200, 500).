#include <stdio.h>

int main() {
    int amount, i;
    int notes[] = {500, 200, 100, 50, 20, 10, 5, 2, 1};
    int count[9] = {0};

    // Accept amount
    printf("Enter the amount: ");
    scanf("%d", &amount);

    // Calculate minimum notes
    for(i = 0; i < 9; i++) {
        if(amount >= notes[i]) {
            count[i] = amount / notes[i];
            amount = amount % notes[i];
        }
    }

    // Print result
    printf("\nMinimum number of notes required:\n");
    for(i = 0; i < 9; i++) {
        if(count[i] != 0) {
            printf("%d × ₹%d\n", count[i], notes[i]);
        }
    }

    return 0;
