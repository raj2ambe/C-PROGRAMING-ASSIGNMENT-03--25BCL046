#include <stdio.h>

int main() {
    char str[100] = "Hello RAJ!";
    int i = 0;

    // Convert each character to lowercase
    while (str[i] != '\0') {
        if (str[i] >= 'A' && str[i] <= 'Z') {
            str[i] = str[i] + 32;
        }
        i++;
    }

    printf("Lowercase string: %s\n", str);

    return 0;
}
